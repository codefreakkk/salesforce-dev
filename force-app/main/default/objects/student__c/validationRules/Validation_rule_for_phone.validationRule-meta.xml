<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validation_rule_for_phone</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(phone__c, &quot;^[789]{1}[0-9]{2}-[0-9]{3}-[0-9]{4}$&quot;))</errorConditionFormula>
    <errorMessage>Invalid phone number format</errorMessage>
</ValidationRule>
